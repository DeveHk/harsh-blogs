{
  "name": "harsh-tamplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "commitmsg": "validate-commit-msg",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "format": "prettier --write .",
    "test-all": "npm run check-format && npm run check-lint && npm run check-types && npm run build",
    "prepare": "husky install",
    "lint": "next lint"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.1.4",
    "@chakra-ui/react": "^2.7.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@next/font": "13.1.1",
    "@supabase/auth-helpers-nextjs": "^0.7.2",
    "@supabase/supabase-js": "^2.26.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@types/uuid": "^9.0.2",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "draft-js": "^0.11.7",
    "eslint": "8.30.0",
    "eslint-config-next": "13.1.1",
    "formik": "^2.4.2",
    "framer-motion": "^10.12.18",
    "googleapis": "^120.0.0",
    "husky": "^8.0.2",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "lottie-react": "^2.3.1",
    "mongodb": "^5.7.0",
    "mongoose": "^7.3.2",
    "next": "13.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-fast-marquee": "^1.6.0",
    "react-hook-form": "^7.41.2",
    "react-icons": "^4.10.1",
    "recoil": "^0.7.7",
    "swiper": "^10.0.3",
    "typescript": "4.9.4",
    "usehooks-ts": "^2.9.1",
    "uuid": "^9.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.20",
    "prettier": "2.8.1",
    "tailwindcss": "^3.2.4"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feature",
        "fix",
        "refactor",
        "merge",
        "docs",
        "revert"
      ],
      "scope": {
        "required": false,
        "allowed": [
          "*"
        ],
        "validate": false,
        "multiple": false
      },
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "helpMessage": "",
      "autoFix": false
    }
  }
}
